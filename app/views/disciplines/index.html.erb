<%= title 'Disciplines' %>
<hr>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.name %></td>
        <td>
          <%= link_to 'Edit', edit_discipline_path(discipline), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discipline', new_discipline_path, class: 'btn btn-success' %>
