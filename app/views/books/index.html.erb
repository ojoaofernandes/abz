<%= title 'Books' %>
<hr>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Pages</th>
      <th>Quantity</th>
      <th>Language</th>
      <th>Discipline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td width="200"><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.pages %></td>
        <td><%= book.quantity %></td>
        <td><%= book.language %></td>
        <td><%= book.discipline.name %></td>
        <td>
          <%= link_to 'Show', book, class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New book', new_book_path, class: 'btn btn-success' %>
<%= link_to "Import Books", books_import_books_url, method: :post, class: "btn btn-sm btn-success" %>

