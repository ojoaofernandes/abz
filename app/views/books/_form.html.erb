<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id  %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :publisher %>
    <%= form.text_field :publisher, id: :book_publisher, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :pages %>
    <%= form.number_field :pages, id: :book_pages, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :book_quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :language %>
    <%= form.select :language, %w[None PT-BR EN], {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label "Discipline" %>
    <%= collection_select(:book, :discipline_id, Discipline.all, :id, :name, {}, {:class => 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= form.label "Book cover"%>
    <%= form.file_field :image, id: :book_image, multiple: false, :class => 'form-control' %>
  </div>

  <%= form.submit nil, class: 'btn btn-block btn-success' %>
  <%= link_to 'Back', books_path, class: 'btn btn-light' %>
<% end %>
